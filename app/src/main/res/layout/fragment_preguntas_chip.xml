<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/arte"
    android:layout_height="match_parent"
    android:id="@+id/layout_preguntas_chip"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/imagenes_fondo"
        ></ImageView>
    <TextView
        android:id="@+id/pregunta_text_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/coming_soon"
        android:maxWidth="230dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36"
        android:textSize="15dp"
        /><![CDATA[

    />

    ]]>

    <com.google.android.material.chip.Chip

        android:id="@+id/respuesta_1_chip"
        android:layout_width="300dp"

        android:layout_height="60dp"

        android:fontFamily="@font/mat_saleh"
        android:gravity="center"

        android:text=""
        android:textAlignment="center"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        style="@style/Widget.MaterialComponents.Chip.Filter"
        app:layout_constraintVertical_bias="0.59" />

    <com.google.android.material.chip.Chip
        android:text=""
        android:textAlignment="center"
        android:id="@+id/respuesta_2_chip"
        android:fontFamily="@font/mat_saleh"
        android:textColor="#000000"
        android:layout_height="60dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:layout_width="300dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        style="@style/Widget.MaterialComponents.Chip.Filter"

        android:gravity="center"/>
    />

    <com.google.android.material.chip.Chip
        android:text=""
        android:id="@+id/respuesta_3_chip"

        android:layout_height="60dp"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:fontFamily="@font/mat_saleh"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.77"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        style="@style/Widget.MaterialComponents.Chip.Filter"
        android:gravity="center"/>
    />


    <Button
        android:text="confirmar"
        android:id="@+id/confirmar_chip"
        android:fontFamily="@font/mat_saleh"
        android:background="@drawable/boton_metal"
        android:backgroundTintMode="multiply"
        android:backgroundTint="#B64949"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        >

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>