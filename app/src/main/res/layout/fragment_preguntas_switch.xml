<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/arte"
    android:layout_height="match_parent"
    android:id="@+id/layout_preguntas_switch"
    >

    <TextView
        android:id="@+id/pregunta_text_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/coming_soon"
        android:gravity="center"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:maxWidth="230dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36"
        android:textSize="15dp"/>

    <Switch

        android:id="@+id/respuesta_1_switch"

        android:layout_width="300dp"
        android:fontFamily="@font/mat_saleh"
        android:layout_height="60dp"
        android:text=""
        android:background="@drawable/boton_metal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#000000"
        app:layout_constraintVertical_bias="0.59"
        android:gravity="center"/>
    />

    <Switch
        android:text=""
        android:id="@+id/respuesta_2_switch"
        android:textColor="#000000"
        android:fontFamily="@font/mat_saleh"
        android:layout_height="60dp"
        android:layout_width="300dp"
        android:background="@drawable/boton_metal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"/>
    />

    <Switch
        android:text=""
        android:id="@+id/respuesta_3_switch"
        android:fontFamily="@font/mat_saleh"
        android:layout_height="60dp"
        android:layout_width="300dp"
        android:textColor="#000000"
        android:background="@drawable/boton_metal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.77"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"/>
    />

    <Button
        android:text="confirmar"
        android:id="@+id/confirmar_switch"

        android:background="@drawable/boton_metal"
        android:backgroundTintMode="multiply"
        android:backgroundTint="#B64949"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="@font/mat_saleh"
        >

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>